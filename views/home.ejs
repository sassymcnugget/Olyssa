				<a class="nav-button" href="/trips/new"> New Trip | </a>
			</div>
		</nav>

		<div id="trip-container">
			<% trips.forEach((trip, index) => { %>
			<div
				class="card-bg card rounded-0"
				style="background-image: url('<%=trip.img%>');"
			>
				<a href="/trips/<%=trip._id%>">
					<div class="trip-card">
						<h1><%= trip.name %> <br /></h1>
						<p><%= trip.address %> <br /></p>
					</div>
				</a>
			</div>
			<% }) %>
		</div>

