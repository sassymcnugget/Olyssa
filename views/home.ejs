	<body>
  
   <%- include('./partials/_nav') %> 
   
		<nav id="navigation">
			<div class="navbar navbar-expand-lg navbar-light">
				<!-- <div><img id="logo" src="https://64.media.tumblr.com/ebd8916cb73ff5f4106cdc8b5717506f/56c78ea55897421b-ea/s640x960/f54aa6401496517562233c7d6921c73c443b9a49.png" alt="logo"></div> -->
